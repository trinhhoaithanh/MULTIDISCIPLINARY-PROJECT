<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgblueblue"
    tools:context=".SwitchTabActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/txtdashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/temp_screen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_weight="20"
            android:background="#EC6EAD"
            android:gravity="center"
            android:text=""
            android:textColor="#ffff"
            android:textSize="55dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humi"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"

            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/humi_screen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:text=""
            android:textSize="55dp"
            android:gravity="center"
            android:textColor="#ffff"
            android:background="#237A57"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/light_screen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="20"
            android:text=""
            android:textSize="55dp"
            android:gravity="center"
            android:textColor="#ffff"
            android:background="#43C6AC"
            android:layout_margin="20dp"/>


    </LinearLayout>


</ScrollView>