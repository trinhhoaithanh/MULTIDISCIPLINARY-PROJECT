<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchTabActivity"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bgtop" />

            <TextView
                android:id="@+id/txtdashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="MY DASHBOARD"
                android:textColor="@color/white"
                android:textSize="35dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/temp_screen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_weight="20"
            android:background="#e76f51"
            android:gravity="center"
            android:text="0 Â°C"
            android:textColor="#ffff"
            android:textSize="55dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humi"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"

            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/humi_screen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_weight="20"
            android:background="#d4a373"
            android:gravity="center"
            android:text="0%"
            android:textColor="#ffff"
            android:textSize="55dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/light_screen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:layout_weight="20"
            android:background="#ccd5ae"
            android:gravity="center"
            android:text="0 LUX"
            android:textColor="#ffff"
            android:textSize="55dp" />


    </LinearLayout>


</ScrollView>