<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#DBE6F6">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/temp_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="20"
        android:background="#EC6EAD"
        android:gravity="center"
        android:text=""
        android:textColor="#ffff"
        android:textSize="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humi"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/humi_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:text=""
        android:textSize="55dp"
        android:gravity="center"
        android:textColor="#ffff"
        android:background="#237A57"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/light"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>
    <TextView
        android:id="@+id/light_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:text=""
        android:textSize="55dp"
        android:gravity="center"
        android:textColor="#ffff"
        android:background="#43C6AC"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >

        <!-- Pump Button -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pump"
                android:textStyle="bold"/>

            <ToggleButton
                android:id="@+id/pumpbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:checked="false"
                />

        </LinearLayout>

        <!-- Fan Button -->
<!--        <LinearLayout-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="30"-->
<!--            android:orientation="vertical"-->
<!--            android:gravity="center_horizontal">-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
